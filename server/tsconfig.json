{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "ts-node": {
    "files": true
  }
}
